{
	"name": "vscode-events",
	"displayName": "Events",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Events",
			"properties": {
				"events.configurations": {
					"type": "array",
					"default": [
						{
							"event": "onDidStartDebugSession",
							"commands": [
								{
									"command": "workbench.action.toggleStatusbarVisibility",
									"conditions": [
										{
											"configuration": "workbench.statusBar.visible",
											"value": false
										}
									]
								}
							]
						},
						{
							"event": "onDidTerminateDebugSession",
							"commands": [
								{
									"command": "workbench.action.toggleStatusbarVisibility",
									"conditions": [
										{
											"configuration": "workbench.statusBar.visible",
											"value": true
										}
									]
								}
							]
						}
					]
				}
			}
		}
	},
	"main": "./extension.js",
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"vscode": "^1.1.28",
		"eslint": "^5.13.0"
	}
}
